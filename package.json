{
  "name": "shiki-magic-move",
  "type": "module",
  "version": "0.3.7",
  "packageManager": "pnpm@9.0.2",
  "description": "Smoothly animated code blocks with Shiki",
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/antfu",
  "homepage": "https://github.com/shikijs/shiki-magic-move#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shikijs/shiki-magic-move.git"
  },
  "bugs": "https://github.com/shikijs/shiki-magic-move/issues",
  "keywords": [
    "shiki",
    "animations"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.mjs"
    },
    "./core": {
      "import": "./dist/core.mjs"
    },
    "./renderer": {
      "import": "./dist/renderer.mjs"
    },
    "./types": {
      "import": "./dist/types.mjs"
    },
    "./vue": {
      "import": "./dist/vue.mjs"
    },
    "./react": {
      "import": "./dist/react.mjs"
    },
    "./style.css": "./dist/style.css",
    "./dist/*": "./dist/*"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "./vue": [
        "./dist/vue.d.ts"
      ],
      "./react": [
        "./dist/react.d.ts"
      ],
      "./core": [
        "./dist/core.d.ts"
      ],
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "nr play",
    "lint": "eslint .",
    "prepublishOnly": "nr build",
    "release": "bumpp && npm publish",
    "start": "esno src/index.ts",
    "test": "vitest",
    "typecheck": "vue-tsc --noEmit",
    "prepare": "simple-git-hooks",
    "play": "nr -C playground dev",
    "play:build": "nr -C playground build"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "shiki": "^1.1.6",
    "vue": "^3.4.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "shiki": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "dependencies": {
    "diff-match-patch-es": "^0.1.0",
    "ohash": "^1.1.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.14.0",
    "@antfu/ni": "^0.21.12",
    "@antfu/utils": "^0.7.7",
    "@types/diff-match-patch": "^1.0.36",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@unocss/reset": "^0.59.3",
    "@vueuse/core": "^10.9.0",
    "bumpp": "^9.4.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "esno": "^4.7.0",
    "lint-staged": "^15.2.2",
    "pnpm": "^9.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "shiki": "^1.3.0",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.4.5",
    "unbuild": "^2.0.0",
    "unocss": "^0.59.3",
    "vite": "^5.2.9",
    "vitest": "^1.5.0",
    "vue": "^3.4.23",
    "vue-tsc": "^2.0.13"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
